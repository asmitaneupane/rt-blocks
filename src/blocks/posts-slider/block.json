{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "rtb/posts-slider",
  "version": "0.1.0",
  "title": "Posts slider",
  "category": "widgets",
  "icon": "smiley",
  "description": "Showcase your blog content in a dynamic and responsive format.",
  "example": {},
  "supports": {
    "html": false,
    "align": true,
    "alignWide": true,
    "anchor": true,
    "background": {
      "backgroundImage": true,
      "backgroundSize": true
    },
    "className": false,
    "shadow": true,
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "attributes": {
    "apiUrl": {
      "type": "string",
      "default": "https://wptavern.com/"
    },
    "newTab": {
      "type": "boolean",
      "default": false
    },
    "noFollow": {
      "type": "boolean",
      "default": false
    },
    "showTitle": {
      "type": "boolean",
      "default": true
    },
    "showUpdatedDate": {
      "type": "boolean",
      "default": true
    },
    "showExcerpt": {
      "type": "boolean",
      "default": true
    },
    "enableAutoPlay": {
      "type": "boolean",
      "default": false
    },
    "autoScrollInterval": {
      "type": "number",
      "default": 3000
    },
    "perView": {
      "type": "string",
      "default": 3
    },
    "showControls": {
      "type": "boolean",
      "default": true
    }
  },
  "textdomain": "rt-blocks",
  "editorScript": "rt-blocks",
  "editorStyle": "rt-blocks",
  "style": "rt-blocks-style",
  "viewScript": [
    "rt-posts-slider"
  ]
}